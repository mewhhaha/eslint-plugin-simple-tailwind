{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist"
  }
}
